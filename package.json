{
  "name": "week-27-monorepo-deployment",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/db && npx prisma generate && cd ../..",
    "start:web": "bun run apps/web/index.ts",
    "start:ws": "bun run apps/ws/index.ts",
    "start:backend": "bun run apps/backend/index.ts"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.28",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
